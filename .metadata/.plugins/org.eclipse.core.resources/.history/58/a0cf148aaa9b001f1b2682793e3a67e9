package estudiandoparaelexamen1;

import java.util.Scanner;

public class REPE {

	public static void main(String[] args) {
		// 1 cuantas mayus 2 cuantas minus 3 cuantos numeros 4 cuantos caracteres especiales
		
		Scanner sc = new Scanner (System.in);
		System.out.println("cadena texto:");
		String s = sc.nextLine();
		int contador=0;
		
		for (int i=0;i<s.length();i++) {
			char A = s.charAt(i);
			if(A>='A' && A<='Z') {
			contador++;
			}
		}
		System.out.println("Numero de mayusculas: " + contador++);
		
		for (int i=0;i<s.length();i++) {
			char a = s.charAt(i);
			if(a>'a' && a<'z') {
				contador++;
			}
		}
		System.out.println("El numero de mayusculas es: " + contador);
		
		
		
		sc.close();
		
		
	}

}
