package estudiandoparaelexamen1;

import java.util.Scanner;

public class e0511 {

	public static void main(String[] args) {
		// Introducir numeros hasta 0 o multiplo de 5. Y si entra num par mostrar que eso ha pasado
		
		Scanner sc= new Scanner (System.in);
		System.out.println("numerito:");
		int num = sc.nextInt();
		boolean Multiplo = num%5==0;
		boolean Par = num%2==0;
		
		while(num!=0 || Multiplo) {
		
			if (Par) {
				System.out.println("ha entrado un n√∫mero par");
			}
			else {
				System.out.println("No gha entrado un numero par");
			}
		}	
		System.out.println("ciao");
			
	sc.close();		
	}

}
