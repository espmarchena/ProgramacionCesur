package estudiandoparaelexamen1;

import java.util.Scanner;

public class REPE {

	public static void main(String[] args) {
		// 1 cuantas mayus 2 cuantas minus 3 cuantos numeros 4 cuantos caracteres especiales
		
		Scanner sc = new Scanner (System.in);
		System.out.println("cadena texto:");
		String s = sc.nextLine();
		int contadorMayus=0;
		int contadorMinus=0;
		
		for (int i=0;i<s.length();i++) {
			char A = s.charAt(i);
			if(A>='A' && A<='Z') {
			contadorMayus++;
			}
		}
		System.out.println("Numero de mayusculas: " + contadorMayus++);
		
		for (int i=0;i<s.length();i++) {
			char a = s.charAt(i);
			if(a>'a' && a<'z') {
				contadorMinus++;
			}
		}
		System.out.println("El numero de minusculas es: " + contadorMinus);
		
		
		
		sc.close();
		
		
	}

}
