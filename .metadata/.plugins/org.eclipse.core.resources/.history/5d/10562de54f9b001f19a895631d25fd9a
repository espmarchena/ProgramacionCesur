				case 1:
					
					if(Mayus) {
						System.out.println(cadena.length());
					}
				break;
					
				case 2:
				break;
				
				case 3:
				break;
					
				case 4:
				break;
			
				default:
			
			}	
			
		}
		while(opcion!=5);
		
		
		
		sc.close();
	}

}
